<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MongoBlogWebSite</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/all.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MongoBlogWebSite.styles.css" asp-append-version="true" />
	<script src="~/js/all.js"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MongoBlogWebSite</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
								aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Blog" asp-action="Index">Blogs</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Blog" asp-action="CreateBlog">CreateBlog</a>
						</li>
					</ul>
				</div>
				@if (User.Identity?.Name != null)
				{
					<a href="/User/MyDetails" style="color: var(--bs-nav-link-color)" class="nav-link">
						<i class="fa-solid fa-user"></i> @User.Identity.Name.Substring(0, 1)
					</a>
					<a href="/Logout" class="nav-link" style="color: var(--bs-nav-link-color); margin-left: 10px;">
						<i class="fa-solid fa-user-minus"></i> Logout
					</a>
				}
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - MongoBlogWebSite
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
